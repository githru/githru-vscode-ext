{
    "name": "githru-vscode-ext",
    "displayName": "githru-vscode-ext",
    "description": "vscode extension module for githru-vscode-ext",
    "publisher": "githru",
    "repository": {
        "url": "https://github.com/githru/githru-vscode-ext",
        "type": "git"
    },
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.67.0"
    },
    "icon": "images/githru_logo_v0.2.png",
    "author": {
        "name": "team githru"
    },
    "categories": [
        "Other",
        "SCM Providers"
    ],
    "keywords": [
        "githru",
        "git",
        "GitHub",
        "log",
        "visualization",
        "visual analytics"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "menus": {
            "scm/title": [
                {
                    "command": "githru.command.launch",
                    "when": "scmProvider == git",
                    "group": "navigation@2"
                }
            ]
        },
        "commands": [
            {
                "command": "githru.command.launch",
                "title": "Open Githru View",
                "icon": "images/logo.png",
                "category": "Githru"
            },
            {
                "command": "githru.command.get.accessToken",
                "title": "Set access token",
                "category": "Githru"
            }
        ],
        "configuration": {
            "title": "Githru",
            "properties": {
                "githru.github.token": {
                    "type": "string",
                    "default": "",
                    "description": "Insert your GitHub Token for GitHub API."
                },
                "githru.color.primary": {
                    "type": "string",
                    "default": "#ff8272",
                    "description": "Insert your primary color."
                }
            }
        }
    },
    "scripts": {
        "prebuild": "npm run --prefix ../view/ build",
        "build": "npm run compile",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map && vsce package --no-dependencies",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "@githru-vscode-ext/analysis-engine": "^0.3.0"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/vscode": "^1.67.0",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "@vscode/test-electron": "^2.1.3",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "prettier": "^2.7.1",
        "ts-loader": "^9.2.8",
        "typescript": "^4.6.4",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    }
}
